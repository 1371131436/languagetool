  <category name="contraiciones">
    <!-- A_EL A el -> al-->

    <rule id="A_EL" name="a el">
      <pattern>
        <token>a</token>
        <token>el</token>
      </pattern>
      <message>N'asturianu la preposición «a» contrái siempre col artículu determináu: <suggestion>al</suggestion>.</message>
      <short>N'asturianu «a»+«el» contrái.</short>
      <example correction="al" type="incorrect">Foi <marker>a el</marker> cine cola so hermana.</example>
      <example type="correct">Foi al cine cola so hermana.</example>
    </rule>
    

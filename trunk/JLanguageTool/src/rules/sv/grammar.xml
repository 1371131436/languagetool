  <category name="SĂ¤rskrivningar">
    <rule id="ALLT_IHOP" name="SĂ¤rskrivning 'allt ihop (alltihop)'">
      <pattern>
        <token>allt</token>
        <token>ihop</token>
      </pattern>
      <message>Felaktig sĂ¤rskrivning. Menade du <suggestion>alltihop</suggestion>?</message>
      <example correction="alltihop" type="incorrect">Det visade sig att <marker>allt ihop</marker> blev sĂ¤rskrivet.</example>
      <example type="correct">Det visade sig att <marker>alltihop</marker> blev sĂ¤rskrivet.</example>
    </rule>
	<rule id="ATER_IGEN" name="SĂ¤rskrivning 'ĂĄter igen (ĂĄterigen)'">
		<pattern>
			<token>ĂĄter</token>
			<token>igen</token>
      </pattern>
		<message>SĂ¤rskrivning. Menade du <suggestion>ĂĄterigen</suggestion>?</message>
		<example correction="ĂĄterigen" type="incorrect">Det visade sig att <marker>ĂĄter igen</marker> blev ordet sĂ¤rskrivet.</example>
		<example type="correct">Det visade sig <marker>ĂĄterigen</marker> att det sĂ¤rskrivna ordet blev rĂ¤ttat.</example>
    </rule>
	  <rule id="E_POST" name="Eventuellt fel 'e post (e-post)'">
      <pattern>
        <token regexp="yes">e</token>
        <token regexp="yes">post|brev|faktura</token>
      </pattern>
      <message>Dessa ord binds oftast ihop med bindestrĂ¤ck: <suggestion>\1-\2</suggestion>.</message>
      <example type="correct">Du har fĂĄtt <marker>e-post</marker>.</example>
      <example correction="e-post" type="incorrect">Du har fĂĄtt <marker>e post</marker>.</example>
    </rule>
  </category>
  <category name="punkter efter fĂ¶rkortningar">
	<rule id="M_FL" name="FĂ¶rkortningen skrivs normalt med punkter (m.fl.)">
        <pattern>
          <token>m</token>
          <token>fl</token>
        </pattern>
        <message>Denna fĂ¶rkortning skrivs i regel med punkter:<suggestion>m.fl.</suggestion>.</message>
        <example correction="m\.fl\." type="correct">Vi tar med oss Maria, Jens, Sara <marker>m.fl.</marker> och ĂĄker till JĂ¶nkĂ¶ping.</example>
        <example type="incorrect">Vi tar med oss Maria, Jens, Sara <marker>m fl</marker> och ĂĄker till JĂ¶nkĂ¶ping.</example>
    </rule>


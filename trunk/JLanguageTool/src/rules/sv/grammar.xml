<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE rules SYSTEM "../rules.dtd">
<?xml-stylesheet type="text/xsl" href="../print.xsl" ?>
<?xml-stylesheet type="text/css" href="../rules.css" 
title="Easy editing stylesheet" ?>

<rules lang="sv">
  <!-- ====================================================================== -->
  <!-- Särskrivningar -->
  <!-- ====================================================================== -->

  <category name="Särskrivningar">
    <rule id="ALLT_IHOP" name="Särskrivning 'allt ihop (alltihop)'">
      <pattern>
        <token>allt</token>
        <token>ihop</token>
      </pattern>
      <message>Felaktig särskrivning. Menade du <suggestion>alltihop</suggestion>?</message>
      <example correction="alltihop" type="incorrect">Det visade sig att <marker>allt ihop</marker> blev särskrivet.</example>
      <example type="correct">Det visade sig att <marker>alltihop</marker> blev särskrivet.</example>
    </rule>
	<rule id="ATER_IGEN" name="Särskrivning 'åter igen (återigen)'">
		<pattern>
			<token>åter</token>
			<token>igen</token>
      </pattern>
		<message>Särskrivning. Menade du <suggestion>återigen</suggestion>?</message>
		<example correction="återigen" type="incorrect">Det visade sig att <marker>åter igen</marker> blev ordet särskrivet.</example>
		<example type="correct">Det visade sig <marker>återigen</marker> att det särskrivna ordet blev rättat.</example>
    </rule>
	  <rule id="E_POST" name="Eventuellt fel 'e post (e-post)'">
      <pattern>
        <token regexp="yes">e</token>
        <token regexp="yes">post|brev|faktura</token>
      </pattern>
      <message>Dessa ord binds oftast ihop med bindesträck: <suggestion>\1-\2</suggestion>.</message>
      <example type="correct">Du har fått <marker>e-post</marker>.</example>
      <example correction="e-post" type="incorrect">Du har fått <marker>e post</marker>.</example>
    </rule>
  </category>
  <category name="punkter efter förkortningar">
	<rule id="M_FL" name="Förkortningen skrivs normalt med punkter (m.fl.)">
        <pattern>
          <token>m</token>
          <token>fl</token>
        </pattern>
        <message>Denna förkortning skrivs i regel med punkter:<suggestion>m.fl.</suggestion>.</message>
        <example correction="m\.fl\." type="correct">Vi tar med oss Maria, Jens, Sara <marker>m.fl.</marker> och åker till Jönköping.</example>
        <example type="incorrect">Vi tar med oss Maria, Jens, Sara <marker>m fl</marker> och åker till Jönköping.</example>
    </rule>


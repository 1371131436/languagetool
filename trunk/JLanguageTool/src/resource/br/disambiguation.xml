<rules lang="br" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../disambiguation.xsd">
  <rulegroup id="EN_UR" name="en ur + V">
    <rule>
      <pattern mark="1">
        <token>en</token>
        <token>ur</token>
        <token postag="V inf"/>
      </pattern>
      <disambig postag="L ppre"/>
    </rule>
  </rulegroup>
  <rulegroup id="XXI" name="Roman Number">
    <rule>
      <pattern mark="0" case_sensitive="yes">
        <token regexp="yes">[MCDXLVI]+</token>
      </pattern>
      <disambig postag="K e sp"/>
    </rule>
    <rule>
      <pattern mark="0" case_sensitive="yes">
        <token regexp="yes">[MCDXLVI]+-?vet|I-?añ</token>
      </pattern>
      <disambig postag="K e sp o"/>
    </rule>
  </rulegroup>
  <rulegroup id="PREP_A" name="preposition a">
    <rule>
      <pattern mark="1">
        <token regexp="yes">meur|leizh|e-leizh</token>
        <token>a</token>
        <token postag="N.*" postag_regexp="yes"/>
      </pattern>
      <disambig postag="P"/>
    </rule>
  </rulegroup>
  <rulegroup id="VERB_PARTICLE" name="verb particule">
    <rule>
      <pattern mark="0">
        <token>o</token>
        <token postag="V inf"><exception postag="N.*" postag_regexp="yes"/></token>
      </pattern>
      <disambig postag="L o"/>
    </rule>
    <rule>
      <pattern mark="2">
        <token postag="SENT_START"/>
        <token postag="[VNJZ].*|R suj.*" postag_regexp="yes"/>
        <token>a</token>
        <token postag="V.*" postag_regexp="yes"/>
      </pattern>
      <disambig postag="L a"/>
    </rule>
    <rule>
      <pattern mark="0">
        <token>e</token>
        <token postag="V.*" postag_regexp="yes"><exception postag="N.*" postag_regexp="yes"/></token>
      </pattern>
      <disambig postag="L e"/>
    </rule>
    <rule>
      <pattern mark="3">
        <token postag="SENT_START"/>
        <token postag="D.*" postag_regexp="yes"/>
        <token postag="N.*" postag_regexp="yes"/>
        <token>a</token>
        <token postag="V.*" postag_regexp="yes"/>
      </pattern>
      <disambig postag="L a"/>
    </rule>
  </rulegroup>
</rules>

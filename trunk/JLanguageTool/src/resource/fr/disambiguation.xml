<rules lang="fr">
	<rulegroup name="RP : Pronoms personnels objets" id="RP:PRO_PERS_OBJ">
		<rule name="nous">
			<pattern mark="1">
				<token postag_regexp="yes" postag="R pers.*"/>
				<token>nous</token>
			</pattern>
			<disambig postag="R pers obj 1 p"/>
		</rule>
		<rule name="vous">
			<pattern mark="1">
				<token postag_regexp="yes" postag="R pers.*"/>
				<token>vous</token>
			</pattern>
			<disambig postag="R pers obj 2 p"/>
		</rule>
		<rule name="se">
			<pattern mark="0">
				<token>s</token>
				<token postag=".?" postag_regexp="yes"/> 
				<token postag_regexp="yes" postag="V.*"/>
			</pattern>
			<disambig postag="R pers obj 3 sp"/>
		</rule>
		<rule name="te">
			<pattern mark="0">
				<token>t</token>
				<token postag_regexp="yes" postag="V.*"/>
			</pattern>
			<disambig postag="R pers obj 2 s"/>
		</rule>
	</rulegroup>
	
	

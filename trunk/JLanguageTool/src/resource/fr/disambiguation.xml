            <disambig action="filter" postag="V.* 3 s"></disambig>
        </rule>
        <rule name="ils/elles + verbe ">
            <pattern>
                <token regexp="yes">ils|elles</token>
                <marker>
                    <token postag="V.* 3 p" postag_regexp="yes"></token>
                </marker>
            </pattern>
            <disambig action="filter" postag="V.* 3 p"></disambig>
        </rule>
    </rulegroup>

    <rule name="RD : ambig J/N" id="RD-ADJ_NOM">

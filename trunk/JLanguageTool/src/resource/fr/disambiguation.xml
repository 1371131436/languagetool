French Disambiguation Rules for LanguageTool
Copyright (C) 2007 Agnès Souque, 2011 Dominique Pellé
$Id$
--><!-- ported from Myriam's Gramadoir rules --><!--
RP => Règles Particulières
RD => Règles par Défaut
RB => Règles Brutes
-->
<rules lang="fr" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../disambiguation.xsd">
    <unification feature="number">
        <equivalence type="sg">
            <token postag=".* sp?" postag_regexp="yes"></token>
        </equivalence>
        <equivalence type="pl">
            <token postag=".* s?p" postag_regexp="yes"></token>
        </equivalence>
    </unification>
    <unification feature="gender">
        <equivalence type="masc">
            <token postag=".* [me] [sp][sp]?" postag_regexp="yes"></token>
        </equivalence>
        <equivalence type="fem">
            <token postag=".* [fe] [sp][sp]?" postag_regexp="yes"></token>
        </equivalence>
    </unification>

    <!-- Words not tagged in dicollecte -->
    <rule name="adverbes" id="ADVERBES">
        <pattern>
            <marker>
                <token regexp="yes">trop|peu|beaucoup|assez|fort|peut-être</token>
            </marker>
        </pattern>
        <disambig postag="A"></disambig>
    </rule>

    <rule name="la (nom)" id="LA_N">
        <pattern>
            <token regexp="yes">un|les?|ce|du|des</token>
            <marker>
                <token>la</token>
            </marker>
        </pattern>
        <disambig postag="N m sp"></disambig>
    </rule>
    <rule name="est" id="EST">
        <pattern>
            <token regexp="yes">[dl]<exception scope="previous">ne</exception></token>
              
            <token regexp="yes">[’´'‛′‘]</token>
            <marker>
                <token>est</token>
            </marker>
        </pattern>
        <disambig postag="N m s"></disambig>
    </rule>

    <rule name="la (pronom pers))" id="LA_R">
        <pattern>
            <token postag="R pers suj.*" postag_regexp="yes"></token>
            <marker>
                <token>la</token>
            </marker>
        </pattern>
        <disambig postag="R pers obj 3 f s"></disambig>
    </rule>

    <rule name="la (déterminant)" id="LA_D">
        <pattern>
            <marker>
                <and>
                    <token>la</token>
                    <token postag="D f s"></token>
                </and>
            </marker>
        </pattern>
        <disambig postag="D f s"></disambig>
    </rule>

    <!-- So that word "faute" (etc) as in "des faute", "une fautes" is marked as
 a noun and not a verb, otherwise we don't find the incorrect
 accord in number -->
    <rule name="nom" id="N">
        <pattern>
            <token regexp="yes">aucune?s?|chaque|certaine?s?|des?|différents|divers|maint|mêmes?|moult|nombreuses|nul|nulle|plusieurs|quelques|tels?|telles?|toute?s?|une?<exception scope="previous" regexp="yes">[’´'‛′‘]</exception></token>
            <marker>
                <token postag="N.*" postag_regexp="yes"><exception>si</exception></token>
            </marker>
        </pattern>
        <disambig action="filter" postag="N.*"></disambig>
    </rule>

    <rulegroup name="été (nom)" id="ETE">
        <rule>
            <pattern>
                <token regexp="yes">cet|en|un</token>
                <marker>
                    <token>été</token>
                </marker>
            </pattern>
            <disambig postag="N m s"></disambig>
        </rule>
        <rule>
            <pattern>
                <token>l</token>
                <token regexp="yes">[’´'‛′‘]</token>
                <marker>
                    <token>été</token>
                </marker>
            </pattern>
            <disambig postag="N m s"></disambig>
        </rule>
    </rulegroup>
    <rule name="quelque chose" id="QUELQUE_CHOSE">
        <pattern>
            <token>quelque</token>
            <marker>
                <token>chose</token>
            </marker>
        </pattern>
        <disambig postag="N m s"></disambig>
    </rule>

    <rulegroup name="RP : Pronoms personnels objets" id="RP-PRO_PERS_OBJ">
        <rule name="nous">
            <pattern>
                <token postag="R pers .*" postag_regexp="yes"></token>
                <marker>
                    <token>nous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 1 p"></disambig>
        </rule>
        <rule name="le bus nous">
            <pattern>
                <token postag="SENT_START|M fin .*" postag_regexp="yes" skip="1"></token>
                <token postag="D.*" postag_regexp="yes"></token>
                <token postag="N.*" postag_regexp="yes"></token>
                <marker>
                    <token>nous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 1 p"></disambig>
        </rule>
        <rule name="qui nous">
            <pattern>
                <token regexp="yes">à|qui|de|ne|chez|sur|sans|entre|parmi|tout|pour</token>
                <marker>
                    <token>nous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 1 p"></disambig>
        </rule>
        <rule name="Robert nous">
            <pattern>
                <token postag="SENT_START" skip="1"></token>
                <token postag="Z.*" postag_regexp="yes"></token>
                <marker>
                    <token>nous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 1 p"></disambig>
        </rule>
        <rule name="quelqu'un nous">
            <pattern>
                <token>quelqu</token>
                <token regexp="yes">[’´'‛′‘]</token>
                <token regexp="yes">une?s?</token>
                <marker>
                    <token>nous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 1 p"></disambig>
        </rule>
        <rule name="ça nous">
            <pattern>
                <token postag="SENT_START|M nonfin" postag_regexp="yes" skip="1"></token>
                <token regexp="yes">ça|cela|ceci|ceux-ci|celles?-ci<exception scope="previous" postag="P"></exception></token>
                <marker>
                    <token>nous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 1 p"></disambig>
        </rule>
        <rule name="que ça nous">
            <pattern>
                <token regexp="yes">quand|que|si|lorsque|où</token>
                <token regexp="yes">ça|cela|ceci|ceux-ci|celles?-ci</token>
                <marker>
                    <token>nous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 1 p"></disambig>
        </rule>
        <rule name="sans_même nous">
            <pattern>
                <token>sans</token>
                <token>même</token>
                <marker>
                    <token>nous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 1 p"></disambig>
        </rule>
        <rule name="L'homme nous parle">
            <pattern>
                <token postag="N . s" postag_regexp="yes"></token>
                <marker>
                    <token regexp="yes">vous|nous</token>
                </marker>
                <token postag="V .* 3 s" postag_regexp="yes"></token>
            </pattern>
            <disambig action="filter" postag="R pers obj .*"></disambig>
            <example type="ambiguous" inputform="nous[nous/R pers obj 1 p,nous/R pers suj 1 p]" outputform="nous[nous/R pers obj 1 p]">L'homme <marker>nous</marker> parle de sa vie.</example>
            <example type="untouched">La plupart du temps nous sommes dans le développement d'une expertise...</example>
        </rule>
        <rule name="Les études nous ont...">
            <pattern>
                <token postag="N . p" postag_regexp="yes"></token>
                <marker>
                    <token regexp="yes">vous|nous</token>
                </marker>
                <token postag="V .* 3 p" postag_regexp="yes"></token>
            </pattern>
            <disambig action="filter" postag="R pers obj .*"></disambig>
            <example type="ambiguous" inputform="nous[nous/R pers obj 1 p,nous/R pers suj 1 p]" outputform="nous[nous/R pers obj 1 p]">Les études <marker>nous</marker> ont révélé...</example>
            <example type="untouched">La plupart du temps nous sommes dans le développement d'une expertise...</example>
        </rule>
        <rule name="puis-je vous">
            <pattern>
                <token regexp="yes">.*-(je|tu|ils?|elles?|on|vous|nous)</token>
                <marker>
                    <token>vous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 2 p"></disambig>
        </rule>
        <rule name="puis-je nous">
            <pattern>
                <token regexp="yes">.*-(je|tu|ils?|elles?|on|vous|nous)</token>
                <marker>
                    <token>nous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 1 p"></disambig>
        </rule>
        <rule name="vous">
            <pattern>
                <token postag="R pers .*" postag_regexp="yes"></token>
                <marker>
                    <token>vous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 2 p"></disambig>
        </rule>
        <rule name="le bus vous">
            <pattern>
                <token postag="SENT_START|M fin .*" postag_regexp="yes" skip="1"></token>
                <token postag="D.*" postag_regexp="yes"></token>
                <token postag="N.*" postag_regexp="yes"></token>
                <marker>
                    <token>vous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 2 p"></disambig>
        </rule>
        <rule name="qui vous">
            <pattern>
                <token regexp="yes">à|qui|de|ne|chez|sur|sans|entre|parmi|tout|pour</token>
                <marker>
                    <token>vous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 2 p"></disambig>
        </rule>
        <rule name="Robert vous">
            <pattern>
                <token postag="SENT_START" skip="1"></token>
                <token postag="Z.*" postag_regexp="yes"></token>
                <marker>
                    <token>vous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 2 p"></disambig>
        </rule>
        <rule name="quelqu'un vous">
            <pattern>
                <token>quelqu</token>
                <token regexp="yes">[’´'‛′‘]</token>
                <token regexp="yes">une?s?</token>
                <marker>
                    <token>vous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 2 p"></disambig>
        </rule>
        <rule name="ça vous">
            <pattern>
                <token postag="SENT_START|M nonfin" postag_regexp="yes" skip="1"></token>
                <token regexp="yes">ça|cela|ceci|ceux-ci|celles?-ci<exception scope="previous" postag="P"></exception></token>
                <marker>
                    <token>vous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 2 p"></disambig>
        </rule>
        <rule name="que ça vous">
            <pattern>
                <token regexp="yes">quand|que|si|lorsque|où</token>
                <token regexp="yes">ça|cela|ceci|ceux-ci|celles?-ci</token>
                <marker>
                    <token>vous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 2 p"></disambig>
        </rule>
        <rule name="sans_même vous">
            <pattern>
                <token>sans</token>
                <token>même</token>
                <marker>
                    <token>vous</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 2 p"></disambig>
        </rule>
        <rule name="se">
            <pattern>
                <marker>
                    <token>s</token>
                </marker>
                <token postag=".*" postag_regexp="yes"></token>
                <token postag="V.*" postag_regexp="yes"></token>
            </pattern>
            <disambig postag="R pers obj 3 sp"></disambig>
        </rule>
        <rule name="te">
            <pattern>
                <marker>
                    <token>t</token>
                </marker>
                <token postag=".*" postag_regexp="yes"></token>
                <token postag="V.*" postag_regexp="yes"></token>
            </pattern>
            <disambig postag="R pers obj 2 s"></disambig>
        </rule>
        <rule name="m'">
            <pattern>
                <marker>
                    <token>m</token>
                </marker>
                <token postag=".*" postag_regexp="yes"></token>
                <token postag="V.*" postag_regexp="yes"></token>
            </pattern>
            <disambig postag="R pers obj 1 s"></disambig>
        </rule>

        <rule name="lui">
            <pattern>
                <marker>
                    <token>lui</token>
                </marker>
            </pattern>
            <disambig postag="R 3 s"></disambig>
        </rule>
        <rule name="lui (R pers)">
            <pattern>
                <token regexp="yes">[lnj]e|tu|ils?|elles?|on|[nv]ous|la</token>
                <marker>
                    <token>lui</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 3 m s"></disambig>
        </rule>

        <rule>
            <pattern>
                <token postag="[NZR].*" postag_regexp="yes"></token>
                <marker>
                    <token>leur</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 3 p"></disambig>
        </rule>
        <rule>
            <pattern>
                <token>ne</token>
                <marker>
                    <token>leur</token>
                </marker>
            </pattern>
            <disambig postag="R pers obj 3 p"></disambig>
        </rule>
        <rule>
            <pattern>
                <marker>
                    <token postag="D e s">leur</token>
                </marker>
                <token postag="[NJ].*" postag_regexp="yes"></token>
            </pattern>
            <disambig postag="D e s"></disambig>
        </rule>

        <rule name="le/la/les/l'">
            <pattern>
                <token postag="R pers suj .*" postag_regexp="yes"></token>
                <marker>
                    <token postag="R pers obj .*" postag_regexp="yes" regexp="yes">l|la|le|les</token>
                </marker>
            </pattern>
            <disambig><match no="2" postag_regexp="yes" postag="R pers obj .*"></match></disambig>
        </rule>
        <rule name="ne + le/la/les/l'">
            <pattern>
                <token postag="R pers suj .*" postag_regexp="yes"></token>
                <token>ne</token>
                <marker>
                    <token postag="R pers obj .*" postag_regexp="yes" regexp="yes">l|la|le|les</token>
                </marker>
            </pattern>
            <disambig><match no="3" postag_regexp="yes" postag="R pers obj .*"></match></disambig>
        </rule>
    </rulegroup>

    <rulegroup name="RP : Pronoms personnels sujets" id="RP-PRO_PERS_SUJ">
        <rule name="j'">
            <pattern>
                <marker>
                    <token>j</token>
                </marker>
            </pattern>
            <disambig postag="R pers suj 1 s"></disambig>
        </rule>

        <rule name="tu">
            <pattern>
                <marker>
                    <token>tu</token>
                </marker>
                <token postag="V.*" postag_regexp="yes"></token>
            </pattern>
            <disambig postag="R pers suj 2 s"></disambig>
        </rule>
        <rule name="tu te/ne">
            <pattern>
                <marker>
                    <token>tu</token>
                </marker>
                <token regexp="yes">[mntl]e?|la|lui|leur|[nv]ous</token>
            </pattern>
            <disambig postag="R pers suj 2 s"></disambig>
        </rule>

        <rule name="Nous">
            <pattern>
                <token postag="SENT_START"></token>
                <marker>
                    <token>nous</token>
                </marker>
            </pattern>
            <disambig postag="R pers suj 1 p"></disambig>
        </rule>

        <rule name="Vous">
            <pattern>
                <token postag="SENT_START"></token>
                <marker>
                    <token>vous</token>
                </marker>
            </pattern>
            <disambig postag="R pers suj 2 p"></disambig>
        </rule>

    </rulegroup>

    <rulegroup name="RP : étais" id="RP-ETAIS">
        <rule name="j'étais">
            <pattern>
                <token postag="R pers suj 1 s" skip="1"></token>
                <marker>
                    <token>étais</token>
                </marker>
            </pattern>
            <disambig postag="V etre ind impa 1 s"></disambig>
        </rule>
        <rule name="tu étais">
            <pattern>
                <token skip="1">tu</token>
                <marker>
                    <token>étais</token>
                </marker>
            </pattern>
            <disambig postag="V etre ind impa 2 s"></disambig>
        </rule>
    </rulegroup>

    <rulegroup name="ne + verbe" id="NE_V">
        <rule>
            <pattern>
                <token regexp="yes">ne|je|tu|ils?|on</token>
                <marker>
                    <token postag="V.*" postag_regexp="yes"></token>
                </marker>
            </pattern>
            <disambig><match no="1" postag_regexp="yes" postag="V.*"></match></disambig>
        </rule>
        <rule>
            <pattern>
                <token>n</token>
                <token regexp="yes">[’´'‛′‘]</token>
                <marker>
                    <token postag="V.*" postag_regexp="yes"></token>
                </marker>
            </pattern>
            <disambig><match no="2" postag_regexp="yes" postag="V.*"></match></disambig>
        </rule>
    </rulegroup>

    <rulegroup id="SON" name="non (nom)">
        <rule>
            <pattern>
                <token regexp="yes">le|un|au|[mts]on</token>
                <marker>
                    <token>son</token>
                </marker>
            </pattern>
            <disambig postag="N m s"></disambig>
        </rule>
        <rule>
            <pattern>
                <marker>
                    <token>son</token>
                </marker>
                <token>de</token>
                <token regexp="yes">cloches?</token>
            </pattern>
            <disambig postag="N m s"></disambig>
        </rule>
        <rule>
            <pattern>
                <marker>
                    <token>son</token>
                </marker>
                <token>d</token>
                <token regexp="yes">[’´'‛′‘]</token>
                <token regexp="yes">instruments?</token>
            </pattern>
            <disambig postag="N m s"></disambig>
        </rule>
    </rulegroup>

    <rule name="RP : En + participe présent" id="RP-EN_VPPR">
        <pattern>
            <token>en</token>
            <marker>
                <token postag="V ppr"></token>
            </marker>
        </pattern>
        <disambig><match no="1" postag="V ppr"></match></disambig>
    </rule>

    <rulegroup name="RP : mon/ton/son" id="RP-MON_TON_SON">
        <rule name="mon">
            <pattern>
                <marker>
                    <token regexp="yes" postag="N m s" negate_pos="yes">mon|ton|son</token>
                </marker>
            </pattern>
            <disambig postag="D e s"></disambig>
        </rule>
    </rulegroup>

    <rulegroup name="RP : Négation" id="RP-NEGATION">
        <rule name="pas">
            <pattern>
                <token regexp="yes" skip="3">ne|n</token>
                <marker>
                    <token regexp="yes">pas|point|plus|jamais</token>
                </marker>
            </pattern>
            <disambig postag="A"></disambig>
        </rule>
        <rule name="ne">
            <pattern>
                <marker>
                    <token regexp="yes" skip="3">ne?</token>
                </marker>
                <token regexp="yes">pas|point|plus|jamais</token>
            </pattern>
            <disambig postag="A"></disambig>
        </rule>
    </rulegroup>

    <rulegroup name="RP : Infinitif ambigu" id="RP-INFINITIF">
        <rule name="Infinitif être">
            <pattern>
                <token postag="V.*" postag_regexp="yes"></token>
                <marker>
                    <token postag="V etre inf"></token>
                </marker>
            </pattern>
            <disambig postag="V etre inf"></disambig>
        </rule>
        <rule name="Infinitif avoir">
            <pattern>
                <token postag="V .*" postag_regexp="yes"></token>
                <marker>
                    <token postag="V avoir inf"></token>
                </marker>
            </pattern>
            <disambig postag="V avoir inf"></disambig>
        </rule>
    </rulegroup>
    <rule name="RP : Det + Adj ambigu + Nom" id="RP-D_J_AMBIG_N">
        <pattern>
            <unify>  <feature id="number"></feature> <feature id="gender"></feature>
                <token postag="D.*" postag_regexp="yes"></token>
                <token postag="J.*" postag_regexp="yes"></token>
                <token postag="N.*" postag_regexp="yes"><exception regexp="yes">dans|envers</exception><exception inflected="yes" regexp="yes">avoir|être</exception></token>
            </unify>
        </pattern>
        <disambig action="unify"></disambig>
    </rule>

    <rule name="RP : Det + Nom ambigu" id="RP-D_N_AMBIG">
        <pattern>
            <unify> <feature id="number"></feature> <feature id="gender"></feature>
                <token postag="D.*" postag_regexp="yes"></token>
                <token postag="N.*" postag_regexp="yes"><exception regexp="yes">a|dans|envers</exception></token>
            </unify>
        </pattern>
        <disambig action="unify"></disambig>
        <example type="untouched">Ils sont parti.</example>
        <example type="ambiguous" inputform="livre[livre/N e s,livrer/V imp pres 2 s,livrer/V ind pres 1 s,livrer/V ind pres 3 s,livrer/V sub pres 1 s,livrer/V sub pres 3 s]" outputform="livre[livre/N e s]">Il a enfin publié son <marker>livre</marker>.</example>
    </rule>

    <!-- This is to catch frequent errors such as "J'ai manger" which would not
         be caught without disambiguation as "manger" can also be a noun -->
    <rule name="Etre/Avoir + verb" id="ETRE_AVOIR_V_ER">
        <pattern>
            <token postag="V avoir .*" postag_regexp="yes"></token>
            <marker>
                <token regexp="yes" postag="V inf">.*er</token>
            </marker>
        </pattern>
        <disambig postag="V inf"/>
    </rule>

    <rulegroup name="RP : Etre/avoir + participe passé ambigu" id="RP-ÊTRE_AVOIR_VPPA_AMBIG">
        <rule name="ppa masc sing">
            <pattern>
                <token postag="V etre .*|V avoir .*" postag_regexp="yes" skip="2"></token>
                <marker>
                    <token postag="V ppa .*" postag_regexp="yes"></token>
                </marker>
            </pattern>
            <disambig><match no="2" postag_regexp="yes" postag="V ppa .*"></match></disambig>
        </rule>
        <rule name="avoir été">
            <pattern>
                <token postag="V avoir .*" postag_regexp="yes" skip="2"></token>
                <marker>
                    <token>été</token>
                </marker>
            </pattern>
            <disambig postag="V etre ppa m s"></disambig>
        </rule>
    </rulegroup>

    <rulegroup name="RP : Que" id="RP-QUE">
        <rule name="que relatif">
            <pattern>
                <token postag="N.*" postag_regexp="yes"></token>
                <marker>
                    <token regexp="yes">que|qu</token>
                </marker>
            </pattern>
            <disambig postag="R rel e sp"></disambig>
        </rule>
        <rule name="que conjonction sub">
            <pattern>
                <token postag="V.*|A" postag_regexp="yes"></token>
                <marker>
                    <token regexp="yes">que|qu</token>
                </marker>
            </pattern>
            <disambig postag="C sub"></disambig>
        </rule>
    </rulegroup>
    <rule name="RP : Indicatif être (suis est sommes)" id="RP-SUIS_EST_SOMMES">
        <pattern>
            <token postag="R pers suj .*|J.*|N.*|A" postag_regexp="yes"></token>
            <marker>
                <token postag="V etre ind pres .*" postag_regexp="yes"></token>
            </marker>
        </pattern>

        <rule name="j' + verbe">
            <pattern>
                <token>j</token>
                <token regexp="yes">[’´'‛′‘]</token>
                <marker>
                    <token postag="V.* 1 s" postag_regexp="yes"></token>
                </marker>
            </pattern>
            <disambig action="filter" postag="V.* 1 s"></disambig>
        </rule>
        <rule name="tu + verbe">
            <pattern>
                <token>tu</token>
                <marker>
                    <token postag="V.* 2 s" postag_regexp="yes"></token>
                </marker>
            </pattern>
            <disambig action="filter" postag="V.* 2 s"></disambig>
        </rule>
        <rule name="ne t' + verbe">
            <pattern>
                <token>ne<exception scope="previous" postag_regexp="yes" postag="R pers suj.*"></exception></token>
                <token>t</token>
                <token regexp="yes">[’´'‛′‘]</token>

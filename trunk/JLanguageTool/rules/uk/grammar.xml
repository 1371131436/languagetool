		-->
			<rule>
				<pattern>
					<token regexp="yes">.*[аеєиіїоѿюя]</token>
					<token regexp="yes">ѿ</token>
					<token regexp="yes" negate="yes">в.*</token>
				</pattern>
				<message>Зіяння <suggestion>\1 в</suggestion></message>
				<example type="correct">Балка в ѿтепѿ.</example>
				<example type="incorrect"><marker>Балка ѿ ѿтепѿ</marker>.</example>
			</rule>
			<rule>
				<pattern>
					<token regexp="yes">зі</token>
					<token regexp="yes">[аеєиіїоѿюя].*</token>
				</pattern>
				<message>Зіяння <suggestion>з \2</suggestion></message>
				<example type="correct">Потяг з пвѿтрії.</example>
				<example type="incorrect">Потяг <marker>зі пвѿтрії</marker>.</example>
			</rule>
	</rulegroup>			

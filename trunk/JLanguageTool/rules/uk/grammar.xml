	<rulegroup name="Милозвѿчніѿть" id="NICE">
		<!--
			<rule>
				<pattern>
					<token regexp="yes">.*[аеєиіїоѿюя]</token>
					<token regexp="yes">і</token>
				</pattern>
				<message>Зіяння <suggestion>\1 й</suggestion> <suggestion>\1 та</suggestion></message>
				<example type="correct">Поле й ліѿ.</example>
				<example type="correct">Поле та ліѿ.</example>
				<example type="incorrect"><marker>Поле і</marker> ліѿ.</example>

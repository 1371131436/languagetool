<rulegroup id="EIGEN_ZELF" name="Eigen versus zelfgedaan">
    <rule>
      <pattern>
        <token regexp="yes">eigengemaakt|eigengemaakte</token>
      </pattern>
      <message>Is <suggestion>zelf</suggestion>gemaakt niet beter?</message>
       <example type="correct">Deze boot is <marker>zelfgemaakt</marker>.</example>
       <example type="incorrect">Deze boot is <marker>eigengemaakt</marker>.</example>
    </rule>
  </rulegroup>


  <!--  # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # ## -->
  <category name="Woord-verwarring">
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="PIJLER" name="Peiler i.p.v. pijler">
      <rule>
        <pattern>
          <token>peiler</token>
        </pattern>
        <message>[a] Wanneer u een '(steun)pilaar' bedoelt, wordt het geschreven als <suggestion>pijler</suggestion>. Een 'peiler' is iets of iemand die (diepte) peilt.</message>
        <example type="incorrect">De <marker>peiler</marker> onder het beleid.</example>
        <example type="correct">De <marker>pijler</marker> onder het beleid.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="STIJL_STEIL" name="Stijl in plaats van steil">
      <rule>
        <pattern mark_from="1">
          <token negate="yes" regexp="yes">in|met|oude|nieuwe</token>
          <token skip="1">stijl</token>
          <token regexp="yes">berg.*|helling.*|weg.*|pad.*|straat.*</token>
        </pattern>
        <message>[a] U bedoelt vast <suggestion>steil</suggestion>.</message>
        <example type="incorrect">De weg ging <marker>stijl de berg</marker> op.</example>
        <example type="correct">De weg ging <marker>steil de berg</marker> op.</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">berg.*|helling.*|weg.*|pad.*|straat.*</token>
          <token negate="yes" regexp="yes">in|met|oude|nieuwe</token>
          <token>stijl</token>
        </pattern>
        <message>[b] U bedoelt vast <suggestion>steil</suggestion>.</message>
        <example type="incorrect">Is de <marker>weg altijd stijl</marker>?</example>
        <example type="correct">Is de <marker>weg altijd steil</marker>?</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">berg.*|helling.*|weg.*|pad.*|straat.*</token>
          <token>stijl</token>
        </pattern>
        <message>[c] U bedoelt vast <suggestion>steil</suggestion>.</message>
        <example type="incorrect">Is de <marker>weg stijl</marker>?</example>
        <example type="correct">Is de <marker>weg steil</marker>?</example>
      </rule>
      <rule>
        <pattern mark_to="-1">
          <token>stijl</token>
          <token>achterover</token>
        </pattern>
        <message>[d] U bedoelt vast <suggestion>steil</suggestion>.</message>
        <example type="incorrect">Ik sla <marker>stijl</marker> achterover.</example>
        <example type="correct">Ik sla <marker>steil</marker> achterover.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="ZO-EVEN" name="Zo-even">
      <!-- score -->
      <rule>
        <pattern>
          <token>zoeven</token>
        </pattern>
        <message>Bedoelt u <suggestion>zo-even</suggestion>?</message>
        <example type="correct">Dit is <marker>zo-even</marker> ingetikt.</example>
        <example type="incorrect">Dit is <marker>zoeven</marker> ingetikt.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
  </category>
  <!--  # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # -->
  <category name="Zelfcensuur">
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="OVERDRIJVING" name="Overdrijving">
      <rule>
        <pattern>
          <token regexp="yes">erg|heel|vreselijk|gigantisch|enorm</token>
        </pattern>
        <message>Is hier wellicht sprake van <suggestion>overdrijving?</suggestion></message>
        <example type="incorrect">Het is een <marker>gigantisch</marker> probleem.</example>
        <example type="correct">Het is <marker>een</marker> probleem.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="GROF" name="Grof taalgebruik">
      <rule>
        <pattern>
          <token regexp="yes">.*(lul|kut|kloot|klote|druiloor|zakkenwasser|shit|.*verdom.*).*</token>
        </pattern>
        <message>Dit taalgebruik kan als grof of beledigend worden ervaren.</message>
        <example type="incorrect">Ik vind hem een <marker>klootzak</marker>.</example>
        <example type="correct">Ik heb een <marker>hekel aan</marker> hem.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
  </category>

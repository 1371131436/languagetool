<rules lang="nl">
  <!--  # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # -->
  <category name="Punten en komma's, interpunctie">
    <rulegroup id="EN_KOMMA" name="En, gevolgd door komma">
      <!-- score 100% succes-->
      <rule>
        <pattern>
          <token>,</token>
          <token>en</token>
        </pattern>
        <message>Meestal is een komma voor <suggestion>en</suggestion> overbodig.</message>
        <example type="incorrect">Dit is goed<marker>, en</marker> niet foutief.</example>
        <example type="correct">Dit is foutief <marker>en</marker> dus niet goed.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
  </category>
  <!--  # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # -->
  <category name="Mogelijke typefouten">
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="LIDWOORD_LIDWOORD" name="Dubbel Lidwoord">
      <rule>
        <pattern>
          <token regexp="yes">de</token>
          <token regexp="yes">het</token>
        </pattern>
        <message>Dubbel lidwoord</message>
        <example type="correct"><marker>De</marker> boot is zelfgemaakt.</example>
        <example type="incorrect"><marker>De het</marker> boot is zelfgemaakt.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="Den_HAAG_ETC" name="Plaatsnamen met 's">
      <rule>
        <pattern>
          <token>'</token>
          <token>s</token>
          <token regexp="yes">Graven.*|Heeren.*|Hertog.*</token>
        </pattern>
        <message>[a] Juist is <suggestion>'s-\3</suggestion>. In niet-formele stukken wordt gewoon <suggestion>Den Haag</suggestion> en <suggestion>Den Bosch</suggestion> voor die plaatsen gebruikt.</message>
        <example type="incorrect">Ik ga naar <marker>'s Hertogenbosch</marker>.</example>
        <example type="correct">Ik ga naar <marker>Den Bosch</marker>.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
  </category>
  <!--  # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # -->
  <category name="Ambtelijk of formeel">
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="OUDERWETS" name="Ouderwets">
      <rule>
        <pattern>
          <token regexp="yes">thans|danwel|zulks|voorts|derhalve|desalniettemin|evenwel|mede|dewelke|nimmer|immer</token>
        </pattern>
        <message>[a] Dit woord is ouderwets.</message>
        <example type="incorrect">Ik zie hem <marker>nimmer</marker>.</example>
        <example type="correct">Ik zie haar <marker>nooit</marker>.</example>
      </rule>
      <rule>
        <pattern>
          <token>terzake</token>
        </pattern>
        <message>[b] Bedoelt u <suggestion>ter zake?</suggestion> Het is bovendien wat ouderwets.</message>
        <example type="incorrect">Kom eens <marker>terzake</marker>.</example>
        <example type="correct">Kom eens <marker>ter zake</marker>.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="TER_ZAKE_VAN" name="Ter zake van">
      <!-- score -->
      <rule>
        <pattern>
          <token>ter</token>
          <token>zake</token>
          <token>van</token>
        </pattern>
        <message>Dit is nogal ouderwets. Gebruik liever: <suggestion>in verband met</suggestion>.</message>
        <example type="incorrect"><marker>Ter zake van</marker> uw verzoek --.</example>
        <example type="correct"><marker>In verband met</marker> uw verzoek --.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="TOT_STAND" name="Tot stand komen">
      <!-- score 100% terecht-->
      <rule>
        <pattern>
          <token>totstandkomen</token>
        </pattern>
        <message>Bedoelt u <suggestion>tot stand komen</suggestion>?</message>
        <example type="incorrect">Een woordenlijst zal niet zomaar <marker>totstandkomen</marker>.</example>
        <example type="correct">Een woordenlijst zal niet zomaar <marker>tot stand komen</marker>.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="U_OF_U" name="U of u">
      <rule>
        <pattern case_sensitive="yes" mark_from="1" mark_to="-1">
          <token negate="yes">.</token>
          <token regexp="yes">U</token>
          <token></token>
        </pattern>
        <message>Alleen bij verwiijzingen naar heilige begrippen wordt 'U' gebruikt.</message>
        <example type="correct">Bedoelt <marker>u</marker> dit?</example>
        <example type="incorrect">Bedoelt <marker>U</marker> dit?</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="VAAG" name="Vaag taalgebruik">
      <!-- score redelijk hoog-->
      <rule>
        <pattern>
          <token regexp="yes">dingen|alles|ergens|ooit|wellicht|misschien</token>
        </pattern>
        <message>Woorden als '\1' kunnen een tekst vaag maken.</message>
        <example type="incorrect">Deze zin is <marker>ergens</marker> wel vaag hoor!</example>
        <example type="correct">Deze zin is <marker>wel duidelijk</marker>.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="DUBBELE_ONTKENNING" name="Dubbele ontkenning">
      <!-- score -->
      <rule>
        <pattern>
          <token regexp="yes" skip="5">niet|nooit|geen|nergens|niet-.+</token>
          <token regexp="yes">niet|nooit|geen|nergens|niet-.+</token>
        </pattern>
        <message>Hier kan een dubbele ontkenning staan. Dat maakt de tekst moeilijker.</message>
        <example type="incorrect">Ik doe <marker>nooit geen</marker> jas aan.</example>
        <example type="correct">Ik doe <marker>altijd></marker> een jas aan.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="TE_ALLEN_TIJDE" name="Te allen tijde">
      <!-- score -->
      <rule>
        <pattern>
          <token>ten</token>
          <token regexp="yes">alle|allen</token>
          <token regexp="yes">tijde|tijden</token>
        </pattern>
        <message>[a] Bedoelt u <suggestion>te allen tijde</suggestion>? Is <suggestion>altijd</suggestion> niet beter?</message>
        <example type="incorrect">Dit is <marker>ten alle tijden</marker> fout.</example>
        <example type="correct">Dit is <marker>te allen tijde</marker> in orde.</example>
      </rule>
      <rule>
        <pattern>
          <token>te</token>
          <token>alle</token>
          <token regexp="yes">tijde|tijden</token>
        </pattern>
        <message>[b] Bedoelt u <suggestion>te allen tijde</suggestion>? Is <suggestion>altijd</suggestion> een optie?</message>
        <example type="incorrect">Dit is <marker>te alle tijden</marker> fout.</example>
        <example type="correct">Dit is <marker>te allen tijde</marker> in orde.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
  </category>
  <!--  # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # -->
  <category name="Gewoon, maar fout taalgebruik">
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="GROTE_GETALLEN" name="Grote getallen">
      <rule>
        <pattern>
          <token regexp="yes">.+duizend.*(een|twee|drie|vier|vijf|zes|zeven|acht|negen|tien|twin|der|veer|honderd).*</token>
        </pattern>
        <message>[a] Na duizend komt in getallen een spatie</message>
        <example type="incorrect">Er was <marker>vijfduizendvierhonderdeenentwintig</marker> man aanwezig.</example>
        <example type="correct">Er was <marker>vijfduizend</marker> vierhonderdeenentwintig man aanwezig.</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">.*(m|b|tr)ilj(oen|ard)(een|twee|drie|vier|vijf|zes|zeven|acht|negen|tien|twin|der|veer|honderd|duizend).*</token>
        </pattern>
        <message>[b] De getallen miljoen, miljard, e.d. worden in een getal los geschreven</message>
        <example type="incorrect">De regering begrootte drie <marker>miljoenvijfhonderdduidend</marker>.</example>
        <example type="correct">De regering begrootte drie <marker>miljoen</marker> vijfhonderdduidend.</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">.*(m|b|tr)ilj(oen|ard).*(een|twee|drie|vier|vijf|zes|zeven|acht|negen|tien|tig|honderd|duizend).*</token>
        </pattern>
        <message>[c] De getallen miljoen, miljard, e.d. worden in een getal los geschreven</message>
        <example type="incorrect">De regering begrootte drie <marker>miljoenvijfhonderdduizend</marker>.</example>
        <example type="correct">De regering begrootte drie <marker>miljoen</marker> vijfhonderdduizend.</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">.*(een|twee|drie|vier|vijf|zes|zeven|acht|negen|tien|tig|honderd|duizend).*(m|b|tr)ilj(oen|ard)</token>
        </pattern>
        <message>[c] De getallen miljoen, miljard, e.d. worden in een getal los geschreven</message>
        <example type="incorrect">De regering begrootte <marker>driemiljoen</marker> vijfhonderdduizend.</example>
        <example type="correct">De regering begrootte drie <marker>miljoen</marker> vijfhonderdduizend.</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">.*(b|tr)ilj(oen|ard).*</token>
        </pattern>
        <message>[d] De grote getallen met -joen en -jard zijn niet voor iedereen duidelijk.</message>
        <example type="incorrect">De regering begrootte 3 <marker>biljoen</marker>.</example>
        <example type="correct">De regering begrootte 3000 <marker>miljoen</marker>.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="JOU_JOUW" name="Jou i.p.v. jouw">
      <rule>
        <pattern>
          <token>jou</token>
          <token postag="nou.*" postag_regexp="yes"/>
        </pattern>
        <message>[a] Bedoelt u misschien <suggestion>jouw</suggestion>?</message>
        <example type="incorrect">Is dit <marker>jou huis</marker>?</example>
        <example type="correct">Is dit <marker>jouw huis</marker>?</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="EIGEN_GE" name="Eigengemaakt etc">
      <rule>
        <pattern>
          <token regexp="yes">eigenge.+</token>
        </pattern>
        <message>Niet fout, maar <suggestion>zelf</suggestion> is netter dan 'eigen'.</message>
        <example type="incorrect">Het is een <marker>eigengemaakte</marker> taart.</example>
        <example type="correct">Het is een <marker>zelfgemaakte</marker> taart.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="KOST_DUUR" name="Kost duur">
      <!-- score -->
      <rule>
        <pattern>
          <token skip="10">kost</token>
          <token>duur</token>
        </pattern>
        <message>[a] U bedoelt <suggestion>is duur</suggestion> of <suggestion>kost veel</suggestion>.</message>
        <example type="incorrect">Die auto <marker>kost duur</marker>.</example>
        <example type="correct">Die auto <marker>kost veel</marker>.</example>
      </rule>
      <rule>
        <pattern>
          <token skip="10">duur</token>
          <token>kost</token>
        </pattern>
        <message>[b] U bedoelt <suggestion>is duur</suggestion> of <suggestion>kost veel</suggestion>.</message>
        <example type="incorrect">Weet je niet hoe <marker>duur die auto wel niet kost</marker>?</example>
        <example type="correct">Weet je niet hoe <marker>duur die auto wel niet is</marker>?</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="KAN_KUN" name="Kan en kun">
      <!-- score -->
      <rule>
        <pattern>
          <token>kan</token>
          <token regexp="yes">je|jij</token>
        </pattern>
        <message>[a] Bedoelt u <suggestion>kun \2</suggestion>?</message>
        <example type="correct"><marker>Kun je</marker> het even doen voor mij?.</example>
        <example type="incorrect"><marker>Kan je</marker> het even doen voor mij?</example>
      </rule>
      <rule>
        <pattern>
          <token>kan</token>
          <token>u</token>
        </pattern>
        <message>[b] Bedoelt u <suggestion>kunt u</suggestion>?</message>
        <example type="correct"><marker>Kunt u</marker> het even doen voor mij?.</example>
        <example type="incorrect"><marker>Kan u</marker> het even doen voor mij?</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">je|u</token>
          <token>kan</token>
        </pattern>
        <message>[c] Bedoelt u <suggestion>\1 kunt</suggestion>?</message>
        <example type="correct"><marker>U kunt</marker> dat toch wel even doen voor mij?.</example>
        <example type="incorrect"><marker>U kan</marker> dat toch wel even doen voor mij?</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="DUBBEL_ZO" name="Dubbel zo">
      <!-- score -->
      <rule>
        <pattern>
          <token>dubbel</token>
          <token>zo</token>
        </pattern>
        <message>Juist is <suggestion>twee keer zo</suggestion></message>
        <example type="correct">Dit is <marker>twee keer</marker> zo duur.</example>
        <example type="incorrect">Dit is <marker>dubbel zo</marker> duur.</example>
      </rule>
    </rulegroup>
    <rulegroup id="X_DUBBEL" name="X-Dubbel">
      <rule>
        <pattern>
          <token>dubbel</token>
          <token>zo</token>
        </pattern>
        <message>[a] Juist is <suggestion>twee keer</suggestion> zo</message>
        <example type="correct">Dit is <marker>twee keer</marker> zo duur.</example>
        <example type="incorrect">Dit is <marker>dubbel zo</marker> duur.</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">(drie|vier)dubbel.*</token>
        </pattern>
        <message>[b] Juist is <suggestion>(aantal) keer</suggestion> of <suggestion>(aantal)voudig</suggestion></message>
        <example type="correct">Dit is <marker>drie keer</marker> zo duur.</example>
        <example type="incorrect">Dit is <marker>driedubbel</marker> zo duur.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="ALS_ZIJNDE" name="Als zijnde">
      <!-- score -->
      <rule>
        <pattern>
          <token>als</token>
          <token></token>
          <token>zijnde</token>
        </pattern >
        <message>Bedoelt u <suggestion>'als \2'</suggestion> of <suggestion>'\2 zijnde'</suggestion>?</message>
        <example type="incorrect"><marker>Als professional zijnde</marker> moest hij wel doorzetten.</example>
        <example type="correct"><marker>Als professional</marker> moest hij wel doorzetten.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="BESEF_ME" name="Besef me">
      <!-- score -->
      <rule>
        <pattern>
          <token regexp="yes">besef|beseft|bedenk|bedenkt</token>
          <token regexp="yes">me|zich</token>
          <token>dat</token>
        </pattern >
        <message>Bedoelt u <suggestion>\1 \2</suggestion> of <suggestion>realiseer me/realiseert zich</suggestion>?</message>
        <example type="incorrect">Ik <marker>besef me dat</marker> dit fout is.</example>
        <example type="correct">Ik <marker>besef dat</marker> het anders moet.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="GROTER_ALS" name="Groter als">
      <!-- score -->
      <rule>
        <pattern>
          <token postag="adjective\(er.*" postag_regexp="yes"></token>
          <token>als</token>
        </pattern >
        <message>[a] Juist is: <suggestion>\1 dan</suggestion></message>
        <example type="incorrect">Jan is <marker>groter als</marker> Kees.</example>
        <example type="correct">Jan is <marker>kleiner dan</marker> Kees.</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">even|zo</token>
          <token postag="adjective.*" postag_regexp="yes"></token>
          <token>dan</token>
        </pattern >
        <message>[b]Juist is: <suggestion>\1 \2 als</suggestion></message>
        <example type="incorrect">Jan is net <marker>zo groot dan</marker> Kees.</example>
        <example type="correct">Jan is net<marker>zo klein als</marker> Kees.</example>
      </rule>
      <rule>
        <pattern>
          <token>evenveel</token>
          <token>dan</token>
        </pattern >
        <message>[c]Juist is: <suggestion>evenveel als</suggestion></message>
        <example type="incorrect">Vijf is <marker>evenveel dan</marker> twee plus drie.</example>
        <example type="correct">Vier is <marker>eenveel als</marker> twee plus twee.</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">als|dan</token>
          <token regexp="yes">mij|hem</token>
        </pattern >
        <message>[d] Bedoelt u: <suggestion> dan ik/hij</suggestion></message>
        <example type="incorrect">Hij is even groot <marker>als mij</marker>.</example>
        <example type="correct">Hij is groter <marker>dan ik</marker>.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="DE_EERSTE_INSTANTIE" name="De eerste instantie">
      <!-- score -->
      <rule>
        <pattern>
          <token>in</token>
          <token>de</token>
          <token>eerste</token>
          <token>instantie</token>
        </pattern>
        <message>Juist is: <suggestion>in eerste instantie</suggestion></message>
        <example type="incorrect"><marker>In de eerste instantie</marker> was het fout.</example>
        <example type="correct"><marker>In eerste instantie</marker> was het goed.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="TWEEDE_KAMER" name="Tweede Kamer">
      <!-- score -->
      <rule>
        <pattern>
          <token regexp="yes">[t]weede|[e]erste</token>
          <token regexp="yes">[k]amer.*</token>
        </pattern>
        <message>[a] Bedoelt u misschien <suggestion>Tweede Kamer</suggestion>?</message>
        <example type="correct">De <marker>Eerste Kamer</marker> vergadert vandaag.</example>
        <example type="incorrect">De <marker>tweede kamer</marker> vergadert morgen.</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">tweede-kamer.*</token>
        </pattern>
        <message>[b] bedoelt u <suggestion>Tweede Kamer</suggestion>?</message>
        <example type="correct">Ik heb hier een <marker>Tweede Kamerstuk</marker>.</example>
        <example type="incorrect">Dit <marker>Tweede-Kamerstuk</marker> is gevoelig materiaal.</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">eerste-kamer.+</token>
        </pattern>
        <message>[c] bedoelt u <suggestion>Eerste Kamer</suggestion>?</message>
        <example type="correct">Ik heb hier een <marker>Eerste Kamerstuk</marker>.</example>
        <example type="incorrect">Dit <marker>Eerste-Kamerstuk</marker> is gevoelig materiaal.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="HAASTJE_REPJE" name="Haastje-repje">
      <!-- score -->
      <rule>
        <pattern>
          <token>haasje-repje</token>
        </pattern>
        <message>[a] Bedoelt u <suggestion>haastje-repje</suggestion>?</message>
        <example type="incorrect"><marker>Haasje-repje</marker> ging hij weg.</example>
        <example type="correct"><marker>Haastje-repje</marker> ging hij weg.</example>
      </rule>
      <rule>
        <pattern>
          <token regexp="yes">haasje|haastje</token>
          <token>repje</token>
        </pattern>
        <message>[b] Bedoelt u <suggestion>haastje-repje</suggestion>?</message>
        <example type="incorrect"><marker>Haastje repje</marker> ging hij weg.</example>
        <example type="correct"><marker>Haastje-repje</marker> ging hij weg.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="MANKEER_NIETS" name="Mankeert niets">
      <!-- score -->
      <rule>
        <pattern>
          <token regexp="yes">ik|jij|hij</token>
          <token regexp="yes">mankeer|mankeert</token>
          <token regexp="yes">niets|iets|wat</token>
        </pattern>
        <message>Bedoelt u: '<suggestion>mij/hem/jou</suggestion> mankeert (n)iets'?</message>
        <example type="incorrect"><marker>Ik mankeer wat</marker>.</example>
        <example type="correct"><marker>Mij mankeert niets</marker>.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="WAT_SCHETST" name="Wat schetst mijn verbazing">
      <!-- score -->
      <rule>
        <pattern>
          <token>wat</token>
          <token>schetst</token>
          <token regexp="yes">mijn|zijn|haar|uw</token>
          <token>verbazing</token>
        </pattern>
        <message>Bedoelt u: <suggestion>wie schetst</suggestion>? (Dingen schetsen niet.)</message>
        <example type="incorrect"><marker>Wat schetst mijn verbazing</marker>?</example>
        <example type="correct"><marker>Wie schetst mijn verbazing</marker>?</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="OEKRAINE" name="Oekraine">
      <!-- score -->
      <rule>
        <pattern>
          <token>de</token>
          <token regexp="yes">Oekra(ï|i)ne</token>
        </pattern>
        <message>Juist is :<suggestion>Oekraïne</suggestion>, want het is geen streek, maar een zelfstandig land.</message>
        <example type="incorrect">Zij komt uit <marker>de Oekraïne</marker>.</example>
        <example type="correct">Zij komt uit <marker>Oekraïne</marker>.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="CORDON_BLEU" name="Cordon Blue">
      <!-- score -->
      <rule>
        <pattern>
          <token>cordon</token>
          <token>blue</token>
        </pattern>
        <message>Juist is: <suggestion>cordon bleu</suggestion>, want het is Frans.</message>
        <example type="incorrect">Ik lust geen <marker>Cordon blue</marker>.</example>
        <example type="correct">Ik ben dol op <marker>Cordon bleu</marker>.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <rulegroup id="WOU" name="Wilden ipv wouden">
      <!-- score -->
      <rule>
        <pattern>
          <token regexp="yes">ik|je|jij|hij|wij</token>
          <token regexp="yes">wou.*</token>
        </pattern>
        <message>Netter is: <suggestion>wilde, wilden</suggestion>.</message>
        <example type="incorrect"><marker>Ik wou</marker> dat even zeggen.</example>
        <example type="correct"><marker>Ik wilde</marker> dat even zeggen.</example>
      </rule>
    </rulegroup>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

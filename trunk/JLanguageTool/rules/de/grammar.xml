<rules>

	<rule id="ANREDE_NEUE_RECHTSCHREIBUNG" name="Kleinschreibung der Anredepronomen du/dein/euch/euer">
		<pattern mark_from="1" case_sensitive="yes" lang="de">^SENT_START "Du|Dein|Euch|Euer"</pattern>
		<message>Nach der neuen Rechtschreibung werden Anreden wie 'du, ihr, euch, ...' klein geschrieben (die Anrede 'Sie' wird weiterhin gro√ü geschrieben)</message>
		<example type="correct">Lieber Klaus, willst <em>du</em> ...</example>
		<example type="incorrect">Lieber Klaus, willst <em>Du</em> ...</example>
	</rule>

	<rule id="LASEN_LASSEN" name="Tippfehler lasen/lassen">
		<pattern mark_from="1" case_sensitive="yes" lang="de">"zu" "lasen"</pattern>
		<message>Meinten Sie 'zu <em>lassen</em>'?</message>
		<example type="correct">...sie mit einem Maulkorb rumlaufen zu <em>lassen</em>.</example>
		<example type="incorrect">...sie mit einem Maulkorb rumlaufen zu <em>lasen</em>.</example>
	</rule>

	<!-- wird schon durch DE_CASE gefunden:
	<rule id="LASEN_LASTEN" name="Tippfehler Lasen/Lasten">
		<pattern mark_from="1" case_sensitive="yes" lang="de">"zu" "Lasen"</pattern>
		<message>Meinten Sie 'zu <em>Lasten</em>'?</message>
		<example type="correct">Das geht zu <em>Lasten</em> der Bundekasse..</example>
		<example type="incorrect">Das geht zu <em>Lasen</em> der Bundekasse.</example>
	</rule>
	-->

</rules>

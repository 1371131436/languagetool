<rules>

	<rule id="ANREDE_NEUE_RECHTSCHREIBUNG" name="Kleinschreibung der Anredepronomen du/dein/euch/euer">
		<pattern mark_from="1" case_sensitive="yes" lang="de">^SENT_START "Du|Dein|Euch|Euer"</pattern>
		<message>Nach der neuen Rechtschreibung werden Anreden wie 'du, ihr, euch, ...' klein geschrieben (die Anrede 'Sie' wird weiterhin groß geschrieben)</message>
		<example type="correct">Lieber Klaus, willst <em>du</em> ...</example>
		<example type="incorrect">Lieber Klaus, willst <em>Du</em> ...</example>
	</rule>

	<rule id="LASEN_LASSEN" name="Tippfehler lasen/lassen">
		<pattern mark_from="1" case_sensitive="yes" lang="de">"zu" "lasen"</pattern>
		<message>Meinten Sie 'zu <em>lassen</em>'?</message>
		<example type="correct">...sie mit einem Maulkorb rumlaufen zu <em>lassen</em>.</example>
		<example type="incorrect">...sie mit einem Maulkorb rumlaufen zu <em>lasen</em>.</example>
	</rule>

	<!-- wird schon durch DE_CASE gefunden:
	<rule id="LASEN_LASTEN" name="Tippfehler Lasen/Lasten">
		<pattern mark_from="1" case_sensitive="yes" lang="de">"zu" "Lasen"</pattern>
		<message>Meinten Sie 'zu <em>Lasten</em>'?</message>
		<example type="correct">Das geht zu <em>Lasten</em> der Bundekasse.</example>
		<example type="incorrect">Das geht zu <em>Lasen</em> der Bundekasse.</example>
	</rule>
	-->

	<rule id="ÖKONOMISCH_ÖKUMENISCH" name="Fehler ökonomisch/ökumenisch">
		<pattern mark_to="-1" lang="de">"ökonomischen|ökonomischer" "Gottesdienst|Gottesdienste|Gottesdiensts|Trauung|Taufe|Kirchentag"</pattern>
		<message>Meinten Sie <em>ökumenisch</em> (ökonomisch = auf die Wirtschaft bezogen)?</message>
		<example type="correct">Was ist ein <em>ökumenischer</em> Gottesdienst?</example>
		<example type="incorrect">Was ist ein <em>ökonomischer</em> Gottesdienst?</example>
	</rule>

	<rule id="DENN_DEN" name="Tippfehler den/denn">
		<pattern mark_from="1" lang="de">"aber|doch" "denn"</pattern>
		<message>Meinten Sie <em>denn</em> oder <em>dann</em>?</message>
		<example type="correct">Aber <em>dann</em> ging es los.</example>
		<example type="correct">Aber <em>den</em> haben Sie ja schon.</example>
		<example type="incorrect">Aber <em>denn</em> haben Sie ja schon.</example>
	</rule>

	<rule id="ZAUN_ZAUM" name="Tippfehler Zaun/Zaum">
		<pattern mark_from="1" lang="de">"im" "Zaun" "halten|hielt|hält|haltet|hälst|gehalten"</pattern>
		<message>Meinten Sie <em>Zaum</em>?</message>
		<example type="correct">Da konnt ich meine Finger nicht mehr im <em>Zaum</em> halten.</example>
		<example type="incorrect">Da konnt ich meine Finger nicht mehr im <em>Zaun</em> halten.</example>
	</rule>

	<rule id="BESCHEIDE_BESCHEID" name="Tippfehler Bescheide/Bescheid">
		<pattern mark_from="1" lang="de">"Bescheide|Bescheids" "sagen|sagst|sagt|wissen|weißt|wisst|geben|gebt"</pattern>
		<message>Meinten Sie <em>Zaum</em>?</message>
		<example type="correct">Da würde ich auch <em>Bescheid</em> sagen.</example>
		<example type="incorrect">Da würde ich auch <em>Bescheide</em> sagen.</example>
		<example type="incorrect">Da würde ich auch <em>Bescheids</em> geben.</example>
	</rule>
	
</rules>

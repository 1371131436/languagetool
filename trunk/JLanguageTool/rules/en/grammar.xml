	<rule id="THEN_THAN" name="Confusion of then/than">
		<pattern lang="en" mark_from="2" mark_to="0">"(less|more)" (JJ|NN|NNS) "then"</pattern>
		<message>Did you mean <em>than</em>?</message>
		<error_rate warnings="0" sentences="75900" />
		<example type="correct">It's less controversial <em>than</em> one would think.</example>
		<example type="incorrect">It's less controversial <em>then</em> one would think.</example>
		<!-- known problems:
		It's less controversial then. (made up)
		-->
	</rule>
	
	<rule id="DET_DET" name="Two consecutive articles">
		<pattern lang="en" mark_from="1" mark_to="0">DT DT</pattern>
		<message><em>_Remove</em> the second determiner.</message>
		<error_rate warnings="5" sentences="75900" />
		<example type="correct"><em>The</em> thing is this.</example>
		<example type="incorrect"><em>The the</em> thing is this.</example>
	</rule>


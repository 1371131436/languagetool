<rules lang="es">

  <category name="misc">

    <!-- from Spanish Wikipedia -->
    <rule id="DE_GRATIS" name="«de gratis» (gratis)">
      <pattern mark_from="0" case_sensitive="no">
        <token>de</token>
        <token>gratis</token>
      </pattern>
      <message>
        La forma correcta es decir <suggestion>gratis</suggestion>.</message>
      <example type="correct">El agua es gratis.</example>
      <example type="incorrect">El agua es <marker>de gratis</marker>.</example>
    </rule>

  </category>

	<category name="Palabras de difícil ortografía">
		<rule id="AH_INF" name="ah (a)">
			<pattern case_sensitive="no">
				<token>ah</token>				
				<token postag="VMN0000"/>
			</pattern>
			<message>Esta palabra se escribe sin h: <suggestion>\1 a \3</suggestion>.</message>
			<example type="incorrect">Voy <marker>ah hablar</marker> con ella.</example>
			<example type="correct">Voy <marker>a hablar</marker> con ella.</example>
		</rule>
		<rule id="VOY_HA_INF" name="ir ha + infinitivo (a)">
			<pattern>
				<token inflected="yes">ir</token>
				<token>ha</token>
				<token postag="VMN0000"/>
			</pattern>
			<message>Esta palabra se escribe sin h: <suggestion>\1 a \3</suggestion>.</message>
			<example type="incorrect"><marker>Voy ha hablar</marker> con ella.</example>
			<example type="correct"><marker>Voy a hablar</marker> con ella.</example>
		</rule>
	</category>
</rules>

<rules>

	<!-- fixme: add >'s< (but only as VBZ, not POS) too -->
	<!-- the tokenizer splits "don't" into "do n't" because the tagger needs
		it that way, so we use two tokens: -->
	<rule id="SHORT_FORMS_NOT">
		<pattern lang="en">"(do|did|ca|could|wo|would|must|need|should|is|are|was|were)" "n't"</pattern>
		<message>Suggestion: use a long form like <em>do not</em> instead of <em>don't</em> for formal texts.</message>
		<example type="correct"><em>Do not</em> open the box unless you've read the instructions.</example>
		<example type="incorrect"><em>Don't</em> open the box unless you've read the instructions.</example>
	</rule>
	<rule id="SHORT_FORMS_WILL">
		<pattern lang="en">".*" "'ll"</pattern>
		<message>Suggestion: use a long form like <em>\1 will</em> instead for formal texts.</message>
		<example type="correct"><em>He will</em> open the box.</example>
		<example type="incorrect"><em>He'll</em> open the box.</example>
	</rule>

	<rule id="OR_SENT_START">
		<pattern lang="en" mark_from="0" mark_to="-1">SENT_START "or"</pattern>
		<message>Suggestion: don't start a sentence with <em>or</em>.</message>
		<error_rate warnings="0" sentences="0">0</error_rate>
		<example type="correct">Instead, one could think about other approaches.</example>
		<example type="incorrect">Or one could think about other approaches.</example>
	</rule>

	<rule id="BILLION">
		<pattern lang="en">"billion"</pattern>
		<message>Suggestion: use <em>thousand million</em> instead of billion to avoid ambiguities.</message>
		<error_rate warnings="0" sentences="0">0</error_rate>
		<example type="correct">Instead, one could think about other approaches.</example>
		<example type="incorrect">Or one could think about other approaches.</example>
	</rule>

